@import 'nib'

WHITE = rgb(255, 255, 255)
GRAY_LIGHT = rgb(210, 210, 210)
GRAY = rgb(100, 100, 100)

BLUE_DARK = rgb(1, 82, 99)
BLUE = rgb(0, 158, 179)
BLUE_LIGHT = rgb(208, 255, 255)

RED_LIGHT = rgb(232, 74, 62)
RED = rgb(180, 35, 8)

SIDEBAR_WIDTH = 180px
AVATAR_SIZE = 35px
AVATAR_SIZE_SMALL = 18px

BORDER_RADIUS = 5px

FONT_SIZE = 15px
FONT_SIZE_SMALL = 12px

SPACING_SIZE = 10px

ellipsis()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

.clearfix:before, .clearfix:after
  content: ''
  display: table

.clearfix:after
  clear: both

*, *:after, *:before
  box-sizing: border-box

html, body
  margin: 0
  padding: 0
  height: 100%
  overflow: hidden

body
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size: FONT_SIZE

.sidebar
  position: absolute
  left: 0
  top: 0
  bottom: 0
  width: SIDEBAR_WIDTH
  background-color: BLUE_DARK
  color: GRAY_LIGHT

  .heading
    margin: SPACING_SIZE 0 0 SPACING_SIZE
    text-transform: uppercase
    font-weight: bold

  a
    color: GRAY_LIGHT
    text-decoration: none
    padding: (SPACING_SIZE / 3) (SPACING_SIZE * 2)
    display: block

  ul
    list-style: none
    padding: 0
    margin: SPACING_SIZE 0

  li
    margin: 0
    padding: 0

    &.active
      background-color: RED_LIGHT
      a
        color: WHITE

  .avatar
    float: left
    background-color: RED
    border-radius: (BORDER_RADIUS / 2)
    width: AVATAR_SIZE_SMALL
    height: AVATAR_SIZE_SMALL
    margin-right: (SPACING_SIZE / 2)
    margin-left: (SPACING_SIZE / -2)
    opacity: 0.7

.content
  position: absolute
  right: 0
  top: 0
  bottom: 0
  left: SIDEBAR_WIDTH

.messages
  margin: SPACING_SIZE
  overflow-y: scroll
  height: calc(100% - 65px)

.message
  margin: SPACING_SIZE 0
  .avatar
    float: left
    background-color: RED
    border-radius: BORDER_RADIUS
    width: AVATAR_SIZE
    height: AVATAR_SIZE
  .username, .timestamp
    display: inline-block
    line-height: 1
  .username
    font-weight: bold
    margin-left: SPACING_SIZE
  .timestamp
    color: GRAY_LIGHT
    font-size: FONT_SIZE_SMALL
    margin-left: (SPACING_SIZE / 2)
  .text
    margin-left: AVATAR_SIZE + SPACING_SIZE
    margin-top: 2px

.starterMessage
  color: GRAY
  font-style: italic

input
  font-size: FONT_SIZE
  position: absolute
  bottom: 0
  outline: 0
  width: calc(100% - 20px)
  padding: SPACING_SIZE
  margin: SPACING_SIZE
  border: solid 3px GRAY_LIGHT
  border-radius: BORDER_RADIUS
  box-shadow: 0 0 0 2px WHITE
